<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/two_fragment"
    tools:context="dominika.launcher.TwoFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_gravity="center"
        android:gravity="center"

        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"

        android:rowCount="1"
        android:columnCount="5"
        >


        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"

            style="@style/IconMargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCategoryUtility"
            android:textAlignment="center"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:background="@drawable/utility_apps_icon"
                android:layout_width="@dimen/menu_icon_size_dp"
                android:layout_height="@dimen/menu_icon_size_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Utility"
                android:textColor="@color/iconColor"

                style="@style/ShadowText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="1"

            style="@style/IconMargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCategorySocial"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:background="@drawable/social_apps_icon"
                android:layout_width="@dimen/menu_icon_size_dp"
                android:layout_height="@dimen/menu_icon_size_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Social"
                android:textColor="@color/iconColor"

                style="@style/ShadowText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="2"

            style="@style/IconMargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/btnCategoryMultimedia"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:background="@drawable/multimedia_apps_icon"
                android:layout_width="@dimen/menu_icon_size_dp"
                android:layout_height="@dimen/menu_icon_size_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Multimedia"
                android:textColor="@color/iconColor"

                style="@style/ShadowText"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_row="0"
            android:layout_column="3"

            style="@style/IconMargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCategoryGames"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:background="@drawable/games_apps_icon"
                android:layout_width="@dimen/menu_icon_size_dp"
                android:layout_height="@dimen/menu_icon_size_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Games"
                android:textColor="@color/iconColor"

                style="@style/ShadowText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="4"

            style="@style/IconMargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCategoryHobby"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:background="@drawable/hobby_apps_icon"
                android:layout_width="@dimen/menu_icon_size_dp"
                android:layout_height="@dimen/menu_icon_size_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Hobby"
                android:textColor="@color/iconColor"

                style="@style/ShadowText"
                />

        </LinearLayout>

    </GridLayout>



</RelativeLayout>
